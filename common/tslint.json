{
  "extends": "tslint:recommended",
  "rules": {
    "array-type": [
      true,
      "array"
    ],
    "arrow-parens": true,
    "deprecation": true,
    "linebreak-style": [
      true,
      "LF"
    ],
    "max-classes-per-file": [
      true,
      1
    ],
    "max-line-length": [
      true,
      140
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "interface-name": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-duplicate-imports": true,
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": true,
    "no-var-keyword": true,
    "no-require-imports": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": true,
    "only-arrow-functions": true,
    "one-variable-per-declaration": true,
    "prefer-const": true,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
